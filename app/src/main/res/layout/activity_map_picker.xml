<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapPickerActivity">

    <fragment
        android:id="@+id/map_picker_fragment"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm_location"
        app:layout_constraintTop_toTopOf="parent"
        map:uiZoomControls="true"
        android:layout_marginBottom="8sp"/>

    <Button
        android:id="@+id/btn_confirm_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#2156DD"
        android:text="Confirm This Spot"
        app:layout_constraintBottom_toTopOf="@id/btn_back"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#2156DD"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>